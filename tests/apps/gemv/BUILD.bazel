load("//bazel:tapa_rules.bzl", "tapa_xo")
load("//bazel:v++_rules.bzl", "vpp_xclbin")

sh_test(
    name = "gemv",
    size = "small",
    srcs = ["//bazel:v++_env.sh"],
    args = ["$(location gemv-host)"],
    data = [":gemv-host"],
)

sh_test(
    name = "gemv-xosim",
    size = "medium",
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location gemv-host)",
        "--bitstream=$(location gemv-xo)",
        "--xosim_executable=$(location //tapa_fast_cosim)",
    ],
    data = [
        ":gemv-host",
        ":gemv-xo",
        "//tapa_fast_cosim",
    ],
)

sh_test(
    name = "gemv-cosim",
    size = "medium",
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location gemv-host)",
        "--bitstream=$(location gemv-hw-emu-xclbin)",
    ],
    data = [
        ":gemv-host",
        ":gemv-hw-emu-xclbin",
    ],
)

cc_binary(
    name = "gemv-host",
    srcs = glob([
        "*.cpp",
        "*.h",
    ]),
    deps = [
        "//tapa-lib:tapa",
        "@com_github_gflags_gflags//:gflags",
        "@vitis_hls//:include",
    ],
)

tapa_xo(
    name = "gemv-xo",
    src = "gemv.cpp",
    hdrs = glob(["*.h"]),
    include = ["."],
    platform_name = "xilinx_u250_gen3x16_xdma_4_1_202210_1",
    top_name = "Gemv",
)

vpp_xclbin(
    name = "gemv-hw-emu-xclbin",
    platform_name = "xilinx_u250_gen3x16_xdma_4_1_202210_1",
    target = "hw_emu",
    top_name = "Gemv",
    xo = ":gemv-xo",
)
