load("@rules_cc//cc:defs.bzl", "cc_binary")
load("@rules_shell//shell:sh_test.bzl", "sh_test")
load("//bazel:tapa_rules.bzl", "tapa_xo")
load("//bazel:v++_rules.bzl", "vpp_xclbin")

exports_files(
    [
        ".",
        "vadd.cpp",
        "vadd.h",
    ],
    visibility = ["//tests/functional:__subpackages__"],
)

sh_test(
    name = "vadd",
    size = "medium",
    srcs = ["//bazel:v++_env.sh"],
    args = ["$(location vadd-host)"],
    data = [":vadd-host"],
    env = {"TAPA_CONCURRENCY": "2"},
    tags = ["cpu:2"],
)

sh_test(
    name = "vadd-xosim",
    size = "enormous",
    timeout = "moderate",
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location vadd-host)",
        "--bitstream=$(location vadd-xo)",
        "--xosim_executable=$(location //tapa/cosim:tapa-fast-cosim)",
        "1000",
    ],
    data = [
        ":vadd-host",
        ":vadd-xo",
        "//tapa/cosim:tapa-fast-cosim",
    ],
    tags = [
        "cpu:2",
    ],
)

sh_test(
    name = "vadd-cosim",
    size = "enormous",
    timeout = "moderate",
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location vadd-host)",
        "--bitstream=$(location vadd-hw-emu-xclbin)",
        "1000",
    ],
    data = [
        ":vadd-host",
        ":vadd-hw-emu-xclbin",
    ],
    tags = [
        "cpu:2",
    ],
)

cc_binary(
    name = "vadd-host",
    srcs = glob([
        "*.cpp",
        "*.h",
    ]),
    visibility = ["//tests/functional:__subpackages__"],
    deps = [
        "//tapa-lib:tapa",
        "@gflags",
        "@vitis_hls//:include",
    ],
)

tapa_xo(
    name = "vadd-xo",
    src = "vadd.cpp",
    hdrs = ["vadd.h"],
    include = ["."],
    top_name = "VecAdd",
    visibility = ["//tests/functional:__subpackages__"],
)

vpp_xclbin(
    name = "vadd-hw-emu-xclbin",
    platform_name = "xilinx_u250_gen3x16_xdma_4_1_202210_1",
    target = "hw_emu",
    top_name = "VecAdd",
    xo = ":vadd-xo",
)
