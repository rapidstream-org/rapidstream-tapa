load("//bazel:tapa_rules.bzl", "tapa_xo")

sh_test(
    name = "peek",
    size = "medium",
    srcs = ["//bazel:v++_env.sh"],
    args = ["$(location peek-host)"],
    data = [":peek-host"],
    env = {"TAPA_CONCURRENCY": "1"},
)

sh_test(
    name = "peek-xosim",
    size = "enormous",
    timeout = "moderate",
    srcs = ["//bazel:v++_env.sh"],
    args = [
        "$(location peek-host)",
        "--bitstream=$(location peek-xo)",
        "--xosim_executable=$(location //tapa/cosim:tapa-fast-cosim)",
        "1000",
    ],
    data = [
        ":peek-host",
        ":peek-xo",
        "//tapa/cosim:tapa-fast-cosim",
    ],
    tags = [
        "cpu:2",
    ],
)

cc_binary(
    name = "peek-host",
    srcs = glob([
        "*.cpp",
    ]),
    deps = [
        "//tapa-lib:tapa",
        "@gflags",
        "@vitis_hls//:include",
    ],
)

tapa_xo(
    name = "peek-xo",
    src = "vadd.cpp",
    platform_name = "xilinx_u250_gen3x16_xdma_4_1_202210_1",
    top_name = "VecAdd",
)
