{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "checkJs": true,
        "incremental": true,
        "isolatedModules": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES2023"
    },
    "include": [
        "eslint.config.mjs",
        "src/*.js",
        "types/*.d.ts",
        "webpack.config.cjs"
    ]
}
