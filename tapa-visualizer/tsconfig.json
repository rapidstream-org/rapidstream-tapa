{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "checkJs": true,
        "incremental": true,
        "isolatedModules": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES2023",
        "typeRoots": [
            "./node_modules/@types/node",
            "./node_modules/@types/prismjs",
            "./types"
        ]
    },
    "include": [
        "eslint.config.mjs",
        "src/**/*.js",
        "types/**/*.d.ts",
        "webpack.config.mjs"
    ]
}
